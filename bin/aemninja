#!/usr/bin/env ruby

require 'aemninja'

ARGV << '--help' if ARGV.empty?

command = ARGV.shift

aemninja = Aemninja::Application::new

if command == "deploy" then
  environment = ARGV.shift || 'local'
  aemninja.deploy!(environment)

elsif command == "init" then
  aemninja.init!

elsif command == "start" then

  instance = ARGV.shift || 'all'
  aemninja.start(instance)

else
  aemninja.no_valid_command
end


