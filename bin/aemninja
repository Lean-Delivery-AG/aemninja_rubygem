#!/usr/bin/env ruby

require 'aemninja'

ARGV << '--help' if ARGV.empty?

command = ARGV.shift

if command == "deploy" then
  environment = ARGV.shift || 'local'
  Aemninja::Commands.deploy!(environment)

elsif command == "init" then
  Aemninja::Commands.init!

elsif command == "start" then

  instance = ARGV.shift || 'all'
  Aemninja::Commands.start(instance)

else
  Aemninja::Helpers.usage
end


